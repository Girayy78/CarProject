<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.6"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.carmanagement.BrakeServicesController">

   <top>
      <Button text="Go Back" onAction="#goBack" BorderPane.alignment="TOP_LEFT" style="-fx-padding: 10;"/>
   </top>

   <center>
      <VBox spacing="10" alignment="CENTER" style="-fx-padding: 20;">
         <CheckBox fx:id="brakePadCheck" text="Brake Pad Replacement"/>
         <CheckBox fx:id="brakeDiscCheck" text="Brake Disc Maintenance"/>
         <CheckBox fx:id="brakeFluidCheck" text="Brake Fluid Check"/>
         <Button fx:id="saveButton" text="Save" onAction="#saveSelections" prefWidth="100"/>
      </VBox>
   </center>

</BorderPane>
