<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<GridPane xmlns="http://javafx.com/javafx/17.0.6"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.carmanagement.CarRegisterController"
          alignment="CENTER" hgap="10" vgap="15" style="-fx-padding: 20;">

    <Label text="Brand:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="brandField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Model:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="modelField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Plate:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="plateField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label fx:id="messageLabel" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Button text="Register" onAction="#registerCar" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    <Button text="Go Back" onAction="#goBack" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

</GridPane>
