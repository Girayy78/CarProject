<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns:fx="http://javafx.com/fxml/1"
          xmlns="http://javafx.com/javafx/8"
          fx:controller="com.example.carmanagement.SignupController"
          hgap="10" vgap="10" alignment="CENTER">

   <padding>
      <Insets top="20" bottom="20" left="20" right="20"/>
   </padding>

   <!-- Go Back Button -->
   <HBox spacing="10" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2" alignment="TOP_LEFT">
      <Button text="← Go Back" onAction="#goBack"/>
   </HBox>

   <!-- Username -->
   <Label text="Username" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
   <TextField fx:id="usernameField" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="200"/>

   <!-- Password -->
   <Label text="Password" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
   <PasswordField fx:id="passwordField" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="200"/>

   <!-- Role -->
   <Label text="Role" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
   <ComboBox fx:id="roleComboBox" GridPane.rowIndex="3" GridPane.columnIndex="1" prefWidth="200"/>

   <!-- Sign Up Button -->
   <Button text="Sign Up" onAction="#signUp" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

   <!-- Message Label -->
   <Label fx:id="messageLabel" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
</GridPane>
