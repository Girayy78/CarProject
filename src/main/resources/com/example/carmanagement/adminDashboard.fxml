<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.6"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.carmanagement.AdminDashboardController">

    <top>
        <VBox>
            <Label text="Registered Customers and Services"
                   style="-fx-font-size: 18px; -fx-padding: 10;"/>
            <Separator/>
        </VBox>
    </top>

    <center>
        <TextArea fx:id="customerListArea" editable="false" wrapText="true"
                  style="-fx-font-size: 14px; -fx-padding: 10;"/>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
            <Button text="Logout" onAction="#logout"/>
        </HBox>
    </bottom>

</BorderPane>
