<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.6"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.carmanagement.EssentialMaintenanceController">

   <top>
      <HBox spacing="10" alignment="TOP_LEFT">
         <padding><Insets top="10" left="10"/></padding>
         <Button text="← Go Back" onAction="#goBack"/>
      </HBox>
   </top>

   <center>
      <VBox alignment="CENTER" spacing="10">
         <CheckBox fx:id="tireCheck" text="Tire Maintenance"/>
         <CheckBox fx:id="fluidsCheck" text="Fluids Maintenance"/>
         <CheckBox fx:id="airFilterCheck" text="Air Filter Cleaning"/>
         <CheckBox fx:id="beltCheck" text="Belt Maintenance"/>
         <CheckBox fx:id="lightSignalCheck" text="Lighting And Signal Maintenance"/>
         <CheckBox fx:id="wiperCheck" text="Wiper Blades And Windshield Maintenance"/>
         <Button fx:id="saveButton" text="Save Selections" onAction="#saveSelections"/>
      </VBox>
   </center>
</BorderPane>
