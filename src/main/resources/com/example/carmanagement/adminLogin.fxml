<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns="http://javafx.com/javafx/17.0.6"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.example.carmanagement.AdminLoginController"
          alignment="CENTER"
          hgap="10" vgap="15"
          style="-fx-padding: 20;">

    <Label text="Username" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="usernameTextField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Password" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <PasswordField fx:id="passwordTextField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Button text="Login" onAction="#login" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    <Label fx:id="errorLabel" GridPane.rowIndex="3" GridPane.columnIndex="1" style="-fx-text-fill: red;"/>

    <Button text="Go Back" onAction="#goBack" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
</GridPane>
