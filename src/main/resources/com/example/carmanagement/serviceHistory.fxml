<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.6"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.carmanagement.ServiceHistoryController">

   <top>
      <Label text="Service History" style="-fx-font-size: 20px; -fx-padding: 10;" BorderPane.alignment="CENTER"/>
   </top>

   <center>
      <TextArea fx:id="historyArea" editable="false" wrapText="true" style="-fx-font-size: 14px; -fx-padding: 10;"/>
   </center>

   <bottom>
      <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
         <Button text="Go Back" onAction="#goBack"/>
      </HBox>
   </bottom>

</BorderPane>
