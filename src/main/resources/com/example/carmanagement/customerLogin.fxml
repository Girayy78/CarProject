<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns="http://javafx.com/javafx/17.0.6"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.example.carmanagement.CustomerLoginController"
          alignment="CENTER"
          hgap="10" vgap="15">

    <padding>
        <Insets top="20" bottom="20" right="20" left="20"/>
    </padding>

    <Label text="Username" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="usernameTextField" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="250" />

    <Label text="Password" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <PasswordField fx:id="passwordTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="250" />

    <Button text="Login" onAction="#login" GridPane.columnIndex="1" GridPane.rowIndex="2" maxWidth="100"/>
    <Button text="Go Back" onAction="#goBack" GridPane.columnIndex="0" GridPane.rowIndex="2"/>

    <Label fx:id="errorLabel" GridPane.columnIndex="1" GridPane.rowIndex="3" style="-fx-text-fill: red;" />
</GridPane>
